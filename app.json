{
  "name": "website",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate"
  },
  "env": {
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_BUCKET_NAME": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "CLOUDFRONT_URL": {
      "required": true
    },
    "SENDGRID_PASSWORD": {
      "required": true
    },
    "SENDGRID_USERNAME": {
      "required": true
    }
    "AC_KEY": {
      "required": true
    }
    "AC_ENDPOINT": {
      "required": true
    }
  },
  "addons": [
    "heroku-postgresql",
    "sendgrid"
  ]
}
